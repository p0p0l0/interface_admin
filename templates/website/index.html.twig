{% extends 'base.html.twig' %}

{% block title %}{% trans %}Website List{% endtrans %}{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center">
        <h2> Websites List </h2>
    </div>

    <div class= "d-flex justify-content-between mt-5">
        <a href="#">
            <button type="button" class="btn btn-primary">
                <i class="fa fa-plus"></i> {% trans %}Website Creation{% endtrans %}
            </button>   
        </a>

        <a href=" {{path('website_list')}}">
            <button type="button" class="btn btn-primary">{% trans %}Back to the websites list{% endtrans %}</button>
        </a>
    </div>

    <div class="mt-3">
        <table class="table mt-2">
            <thead>
                <tr>    
                    <th scope="col">{% trans %}Name{% endtrans %}</th>
                    <th scope="col">Url</th>
                    <th scope="col">{% trans %}Folder Name{% endtrans %}</th>
                    <th scope="col">{% trans %}Folder Path{% endtrans %}</th>
                    <th scope="col">Actions</th>
                   
                </tr>
            </thead>
            <tbody>
                {% for website in websites %}

                    <tr>
                        <td>{{website.name}}</td>
                        <td>{{website.url}}</td>
                        <td>{{website.nameFolder}}</td>
                        <td>{{website.pathFolder}}</td>
                       {# <td>
                            <a href="{{ path('website_update',{'customerId': customer.id, 'websiteId':website.id}) }}">
                                <button type="button" class="btn btn-outline-primary">
                                    <i class="fa fa-edit"></i>
                                </button>   
                            </a>
                            &nbsp;
                            <a href="{{ path('website_delete',{'customerId' : customer.id, 'websiteId':website.id}) }}">
                                <button type="button" class="btn btn-outline-danger">
                                    <i class="fa fa-trash-alt"></i>
                                </button>
                            </a>
                            
                        </td>#}
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
