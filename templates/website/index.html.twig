{% extends 'base.html.twig' %}

{% block title %}Hello WebsiteController!{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center">
        <h2> {{ client.name }} </h2>
    </div>

    <div class= "d-flex justify-content-between mt-5">
        <a href="{{path('website_create',{'userId' : user.id, 'clientId':client.id})}}">
            <button type="button" class="btn btn-primary">
                <i class="fa fa-plus"></i> Création d'un site web
            </button>   
        </a>

        <a href=" {{path('interface_list',{'userId' : user.id})}}">
            <button type="button" class="btn btn-primary">Retour à la liste des clients</button>
        </a>
    </div>

    <div class="mt-3">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class= "fa fa-check"></i><span class= "ml-3">{{message}}</span>
            </div>
        {% endfor %}
    </div>

    <div class="mt-3">
        <table class="table mt-2">
            <thead>
                <tr>    
                    <th scope="col">Nom</th>
                    <th scope="col">Url</th>
                    <th scope="col">IP Serveur</th>
                    <th scope="col">Nom Dossier</th>
                    <th scope="col">Chemin dossier</th>
                   
                </tr>
            </thead>
            <tbody>
                {% for website in client.websites %}

                    <tr>
                        <td>{{website.name}}</td>
                        <td>{{website.url}}</td>
                        <td>{{website.ipServeur}}</td>
                        <td>{{website.nameFolder}}</td>
                        <td>{{website.pathFolder}}</td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
