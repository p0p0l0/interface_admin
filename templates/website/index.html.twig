{% extends 'base.html.twig' %}

{% block title %}{% trans %}Website List{% endtrans %}{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center">
        <h2> {% trans %}Websites List{% endtrans %} </h2>
    </div>

    <div class= "d-flex justify-content-between mt-5">
        <a href="{{ path('website_create')}}">
            <button type="button" class="btn btn-primary">
                <i class="fa fa-plus"></i> {% trans %}Website Creation{% endtrans %}
            </button>   
        </a>
    </div>

    <div class="mt-3">
        <table class="table mt-2">
            <thead>
                <tr>    
                    <th scope="col">{% trans %}Type{% endtrans %}</th>
                    <th scope="col">{% trans %}Customer{% endtrans %}</th>
                    <th scope="col">{% trans %}Server name{% endtrans %}</th>
                    <th scope="col">{% trans %}Folder name{% endtrans %}</th>
                    <th scope="col">Actions</th>
                   
                </tr>
            </thead>
            <tbody>
                {% for website in websites %}

                    <tr>
                        <td>{{website.type.name}}</td>
                        <td>{{website.customer.name}}</td>
                        <td>{{website.serverName}}</td>
                        <td>{{website.NameFolder}}</td>
                       <td>
                            <a href="{{ path('website_update',{'websiteId':website.id}) }}">
                                <button type="button" class="btn btn-outline-primary">
                                    <i class="fa fa-edit"></i>
                                </button>   
                            </a>
                            &nbsp;
                            <a href="#delete{{website.id}}" role="button" data-toggle="modal">
                                <button type="button" class="btn btn-outline-danger">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </a>
                            <!-- Modal -->
                            <div class="modal fade" id="delete{{website.id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="delete">{% trans %}Are you sure you want to delete the website{% endtrans %}
                                                {{ website.serverName }} ?</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <a href="{{ path('website_list') }}">
                                                <button type="button" class="btn btn-secondary">
                                                    {% trans %}Close{% endtrans %}
                                                </button>
                                            </a>
                                            <a href="{{ path('website_delete',{'websiteId' : website.id}) }}">
                                                <button type="button" class="btn btn-danger">
                                                    {% trans %}Delete{% endtrans %}
                                                </button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
