{% extends 'base.html.twig' %}

{% block title %} Clients{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center">
        <h2> Liste des clients</h2>
    </div>
    
    {# Affichage bouton creation client#}
    <div> 
        <a href="{{path('customer_create')}}">
            <button type="button" class="btn btn-primary">
                <i class="fa fa-plus"></i> Création d'un client
            </button>   
        </a>
    </div>
 
    {# Tableau des clients#}
    <table class="table mt-2">
        <thead>
            <tr>
                <th scope="col">Statut</th>
                <th scope="col">Nom</th>
                <th scope="col">Mail</th>
                <th scope="col">Telephone</th>
                <th scope="col">UserCreation</th>
                <th scope="col">Date de création</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        <tbody>
            
            {% for customer in customers %}
                <tr>
                    <td>{{ customer.status }}</td>
                    <td>{{ customer.name }}</td>
                    <td>{{ customer.mail }}</td>
                    <td>{{ customer.phone }}</td>
                    <td>{{ customer.userCreation }}</td>
                    <td>{{ customer.createdAt | date('d/m/Y H:i', 'Europe/Paris')}}</td>
                    <td>    
                        <a href="{{ path('customer_update',{'customerId': customer.id}) }}">
                            <button type="button" class="btn btn-primary">
                                <i class="fa fa-edit"></i>
                            </button>   
                        </a>
                        &nbsp;
                        <a href="{{ path('customer_delete',{'customerId' : customer.id}) }}">
                            <button type="button" class="btn btn-outline-danger">
                                <i class="fa fa-minus"></i>
                            </button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
